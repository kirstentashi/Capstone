    <style>
        body, html {
            overflow-x: hidden;
        }
        .home header {
            background: var(--svg-header) no-repeat left/cover;
            height: 100vh;
        }

        .home header .first-line {
            opacity: .8;
        }



        .home header .reserve,
        .home header .menu {
            padding: 5px 10px;
            border-radius: 8px;
            align-content: center;
        }

        .home header .reserve {
            color: var(--primary);
            border: 1px solid white;
            background: white;
            transition: background-position 1.1s ease, color 1s ease;
            margin-right: .2rem;
        }

        .home header .reserve:hover {
            color: white;
            background-image: var(--svg-reserve);
            background-position: 100% 70%;
            background-size: auto 100px;
        }

        .home header .menu {
            color: white;
            border: 1px solid white;
            background: var(--primary);
            transition: background-position 1.1s ease, color 1s ease;
        }

        .home header .menu:hover {
            color: var(--primary);
            background-image: var(--svg-menu);
            background-position: 100% 70%;
            background-size: auto 100px;
        }


        .home section .title {
            font-family: "Sedan", serif;
            font-weight: 400;
            font-style: italic;
            font-size: 2em;
