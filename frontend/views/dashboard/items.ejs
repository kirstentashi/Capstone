    <!-- Add Employee Modal -->
    <div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <form id="addItemForm" method="POST" action="/dashboard/restaurant/item/create">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="addItemModalLabel">Add New Item</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="row g-3">
                <div class="col-md-12">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="name" name="name" placeholder="" value="">
                    <label for="floatingInputGrid">Item Name <span class="required"></span></label>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-floating">
                    <input class="form-control" type="number" value="1" id="goodFor" name="goodFor">
                    <label for="goodFor">Good for how many people? <span class="required"></span></label>
                  </div>
                </div>

                <div class="col-md-6">
                  <!-- <div class="form-floating">
                <select class="form-select" id="itemCategory" name="itemCategory"
                  aria-label="Select Item Category">
                  <option value="Full Time">Full Time</option>
                  <option value="Part Time">Part Time</option>
                  <option value="Contractor">Contractor</option>
                  <option value="Intern">Intern</option>
                </select>
                <label for="floatingInputGrid">Item Name</label>
              </div> -->
                </div>

                <div class="col-md-4">
                  <div class="form-floating">
                    <input type="number" class="form-control" id="stock" name="stock" placeholder="" value="">
                    <label for="floatingInputGrid">Stock <span class="required"></span></label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-floating">
                    <input type="number" class="form-control" id="price" name="price" placeholder="" value="">
                    <label for="floatingInputGrid">Price <span class="required"></span></label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-floating">
                    <input type="number" class="form-control" id="vat" name="vat" placeholder="" value="">
                    <label for="floatingInputGrid">VAT %</label>
                  </div>
                </div>

                <div class="col-md-4">
                  <ul class="list-group">
                    <li class="list-group-item">
                      <input class="form-check-input me-1" type="checkbox" value="true" id="available" name="available">
                      <label class="form-check-label" for="available" id="availableLabel">Available</label>
                    </li>
                  </ul>
                </div>

                <div class="col-md-4">
                  <ul class="list-group">
                    <li class="list-group-item">
                      <input class="form-check-input me-1" type="checkbox" value="true" id="featured" name="featured">
                      <label class="form-check-label" for="featured" id="featuredLabel">Featured</label>
                    </li>
                  </ul>
                </div>
                <div class="col-md-4">
                  <ul class="list-group">
                    <li class="list-group-item">
                      <input class="form-check-input me-1" type="checkbox" value="true" id="bestseller"
                        name="bestseller">
                      <label class="form-check-label" for="bestseller" id="bestsellerLabel">Bestseller</label>
                    </li>
                  </ul>
                </div>

                <div class="mb-1">
                  <label for="image" class="form-label">
                    <h6>Select image</h6>
                  </label>
                  <input class="form-control" type="file" id="image" name="image" accept="image/*">
                </div>

                <div class="col-md-12">
                  <div class="form-floating">
                    <textarea class="form-control" id="desc" name="desc" style="height: 100px"></textarea>
                    <label for="desc">Description</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-success">Add Item</button>
            </div>
          </form>
        </div>
      </div>
    </div>

